<Application x:Class="CsImgProcPractice.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CsImgProcPractice"
             StartupUri="View/MainWindow.xaml">
    
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Font-->
                <ResourceDictionary Source="pack://application:,,,/Resource/Font/FontDictionary.xaml"/>

                <!--Theme-->
                <ResourceDictionary Source="pack://application:,,,/Resource/Theme/BrightTheme.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resource/Theme/DarkTheme.xaml"/>

                <!--Style-->
                <ResourceDictionary Source="pack://application:,,,/Resource/Style/ControlStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>

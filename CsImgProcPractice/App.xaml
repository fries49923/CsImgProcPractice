<Application x:Class="CsImgProcPractice.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CsImgProcPractice"
             StartupUri="View/MainWindow.xaml">

    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!--Theme-->
                <ResourceDictionary Source="pack://application:,,,/CsImgProcPractice;component/Resource/Theme/BrightTheme.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/CsImgProcPractice;component/Resource/Theme/DarkTheme.xaml"/>

                <!--Style-->
                <ResourceDictionary Source="pack://application:,,,/CsImgProcPractice;component/Resource/Style/ControlStyle.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>

</Application>
